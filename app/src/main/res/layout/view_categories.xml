<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="10dp">


    <TextView
        android:id="@+id/txtID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/textselect"
        android:textSize="35dp"
        android:text="Select Categories"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:id="@+id/abc"
        app:layout_constraintTop_toBottomOf="@id/textselect"
        android:padding="15dp"
        android:orientation="horizontal"
        android:background="@drawable/search_view_bg"
        tools:ignore="MissingConstraints">



        <ImageView
            android:id="@+id/imgurl"
            android:src="@drawable/img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/search_view_bg"/>

        <TextView
            android:id="@+id/title"
            android:text="Action figures"
            android:textSize="20sp"
            android:gravity="left"
            android:textColor="#009688"
            android:padding="0dp"
            app:layout_constraintLeft_toRightOf="@id/imgurl"
            android:layout_margin="15dp"
            android:layout_width="200dp"
            android:layout_height="30dp"/>

       <RadioButton
           android:layout_width="30dp"
           android:id="@+id/btn1"
           android:layout_marginTop="50dp"
           android:layout_height="30dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:id="@+id/xyz"
        app:layout_constraintTop_toBottomOf="@id/abc"
        android:padding="15dp"
        android:orientation="horizontal"
        android:background="@drawable/search_view_bg"
        tools:ignore="MissingConstraints">



        <ImageView
            android:id="@+id/imgurl1"
            android:src="@drawable/img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/search_view_bg"/>

        <TextView
            android:id="@+id/title1"
            android:text="Animals"
            android:textSize="20sp"
            android:gravity="left"
            android:textColor="#009688"
            android:padding="0dp"
            app:layout_constraintLeft_toRightOf="@id/imgurl"
            android:layout_margin="15dp"
            android:layout_width="200dp"
            android:layout_height="30dp"/>

        <RadioButton
            android:layout_width="30dp"
            android:id="@+id/btn2"
            android:layout_marginTop="50dp"
            android:layout_height="30dp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/xyz"
        android:padding="15dp"
        android:id="@+id/pqr"
        android:orientation="horizontal"
        android:background="@drawable/search_view_bg"
        tools:ignore="MissingConstraints">



        <ImageView
            android:id="@+id/imgurl2"
            android:src="@drawable/img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/search_view_bg"/>

        <TextView
            android:id="@+id/title2"
            android:text="Cars and radio controlled"
            android:textSize="20sp"
            android:gravity="left"
            android:textColor="#009688"
            android:padding="0dp"
            app:layout_constraintLeft_toRightOf="@id/imgurl"
            android:layout_margin="15dp"
            android:layout_width="200dp"
            android:layout_height="30dp"/>

        <RadioButton
            android:layout_width="30dp"
            android:id="@+id/btn3"
            android:layout_marginTop="50dp"
            android:layout_height="30dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/pqr"
        android:padding="15dp"
        android:id="@+id/opss"
        android:orientation="horizontal"
        android:background="@drawable/search_view_bg"
        tools:ignore="MissingConstraints">



        <ImageView
            android:id="@+id/imgurl3"
            android:src="@drawable/img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/search_view_bg"/>

        <TextView
            android:id="@+id/title3"
            android:text="Construction toys"
            android:textSize="20sp"
            android:gravity="left"
            android:textColor="#009688"
            android:padding="0dp"
            app:layout_constraintLeft_toRightOf="@id/imgurl"
            android:layout_margin="15dp"
            android:layout_width="200dp"
            android:layout_height="30dp"/>

        <RadioButton
            android:layout_width="30dp"
            android:id="@+id/btn4"
            android:layout_marginTop="50dp"
            android:layout_height="30dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:id="@+id/lmn"
        app:layout_constraintTop_toBottomOf="@id/opss"
        android:padding="15dp"
        android:orientation="horizontal"
        android:background="@drawable/search_view_bg"
        tools:ignore="MissingConstraints">



        <ImageView
            android:id="@+id/imgurl4"
            android:src="@drawable/img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/search_view_bg"/>

        <TextView
            android:id="@+id/title4"
            android:text="Others"
            android:textSize="20sp"
            android:gravity="left"
            android:textColor="#009688"
            android:padding="0dp"
            app:layout_constraintLeft_toRightOf="@id/imgurl"
            android:layout_margin="15dp"
            android:layout_width="200dp"
            android:layout_height="30dp"/>

        <RadioButton
            android:layout_width="30dp"
            android:id="@+id/btn5"
            android:layout_marginTop="50dp"
            android:layout_height="30dp"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btnNext"
        android:text="Next"
        android:layout_marginStart="270dp"
        app:layout_constraintTop_toBottomOf="@id/lmn"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
